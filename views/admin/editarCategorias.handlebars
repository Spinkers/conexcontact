
  <title>Conex Contact - Editar Categorias</title>

<div id="page-top">

  {{>_menuPainel}}  

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="index.html">Dashboard</a>
          </li>
          <li class="breadcrumb-item active">Editar Categorias</li>
        </ol>

        <!-- Modal visualizar informações das listas -->
        <div class="modal fade" id="modalVisualizarLista" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Editar lista</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
                <form action="/admin/editarLista" method="POST">
                  <div class="modal-body">

                      <input type="hidden" id="idLista2" name="id">

                      <label for="nomeLista2">Nome: </label>
                      <input type="text" id="nomeLista2" name="nomeLista" class="form-control" placeholder="Empregadas domésticas">

                      <label for="linkCompra2" class="mt-2">Link de pagamento: </label>
                      <input type="text" id="linkCompra2" name="linkCompra" class="form-control" placeholder="https://www.mercadopago.com/.....">

                      <label for="imagemLista2">Imagem: </label>
                      <input type="text" class="form-control" id="imagemLista2" name="imagemLista">

                      <label for="descricao2" class="mt-2">Descrição: </label>
                      <textarea type="text" id="descricao2" name="descricao" class="form-control" placeholder="Empresa tal, que faz tal coisa..."></textarea>

                      <div class="mt-3">
                        <b id="renderizarStatus"></b>                        
                      </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar alterações</button>
                  </div>
                </form>
            </div>
          </div>
        </div>

        <!-- Page Content -->
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-list-alt"></i>
            Lista de categorias</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Ativar</th>
                    <th>Editar</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Ativar</th>
                    <th>Editar</th>
                  </tr>
                </tfoot>
                <tbody>
                  {{#each categoria}}
                        <tr id="{{_id}}***">
                          <td>{{nome}}</td>
                          <td>{{descricao}}</td>
                          <td>
                              {{#if ativo}}
                              <form action="/admin/ativarCategoria" method="POST">
                                <input name="id" type="hidden" value="{{_id}}">
                                <input type="hidden" id="status" value="{{ativo}}">
                                <button type="submit" class="btn btn-danger"><i class="fas fa-fw fa-stop-circle"></i></button>
                              </form>
                              {{else}}
                              <form action="/admin/ativarCategoria" method="POST">
                                <input name="id" type="hidden" value="{{_id}}">
                                <input type="hidden" id="status" value="{{ativo}}">
                                <button type="submit" class="btn btn-success"><i class="fas fa-fw fa-check-circle"></i></button>
                              </form>
                              {{/if}}
                          </td>
                          <td>
                            <input type="hidden" id="imagem" value="{{imagem}}">
                            <input type="hidden" id="linkCompra" value="{{link}}">
                            <button id="{{_id}}" onclick="transferirDadosLista(this.id)" class="btn btn-primary" data-toggle="modal" data-target="#modalVisualizarLista">
                              <i class="fas fa-fw fa-edit"></i>
                            </button>
                          </td>
                          <input name="id" type="hidden" value="{{_id}}">
                        </tr>
                    </form>
                  {{else}}

                  {{/each}}
                 
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
        </div>

        <p class="small text-center text-muted my-5">
          <em>More table examples coming soon...</em>
        </p>

      </div>

      </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
            {{>_footer}}

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

</div>

<script src="/js/lista.js"></script>